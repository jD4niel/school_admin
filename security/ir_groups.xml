<?xml version="1.0"?>
<odoo>
    <data>
        <record model="ir.module.category" id="school_category">
            <field name="name">School</field>
            <field name="sequence">100</field>
        </record>

        <record model="res.groups" id="administrative_group">
            <field name="name">Is Administrative</field>
            <field name="category_id" ref="school_category"/>
        </record>

        <record model="res.groups" id="teacher_group">
            <field name="name">Is Teacher</field>
            <field name="category_id" ref="school_category"/>
        </record>

        <record model="res.groups" id="tutor_group">
            <field name="name">Is Tutor</field>
            <field name="category_id" ref="school_category"/>
        </record>
    </data>
</odoo>
